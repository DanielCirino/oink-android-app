<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
  xmlns:app="http://schemas.android.com/apk/res-auto"
  xmlns:tools="http://schemas.android.com/tools"
  android:layout_width="match_parent"
  android:layout_height="match_parent"
  tools:context=".ui.MainActivity"
  android:background="@color/current_line">

  <LinearLayout
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical"
    android:padding="8dp"
    app:layout_constraintBottom_toBottomOf="parent"
    app:layout_constraintLeft_toLeftOf="parent"
    app:layout_constraintRight_toRightOf="parent"
    app:layout_constraintTop_toTopOf="parent">

  <androidx.cardview.widget.CardView
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:minHeight="100dp"
    android:padding="16dp"
    android:elevation="2dp"
    app:cardCornerRadius="8dp">
    <TextView
      android:layout_width="match_parent"
      android:layout_height="wrap_content"
      android:text="TÃ­tulo do Card"
      android:fontFamily="@font/concert_one_regular"
      android:layout_margin="4dp"
      android:textSize="24sp"
      android:textStyle="bold"/>
  </androidx.cardview.widget.CardView>

    <TextView
      android:layout_width="match_parent"
      android:layout_height="wrap_content"
      android:layout_marginTop="16dp"
      android:text="Hello World!"
      android:textColor="@color/white"
      android:textSize="22sp" />
    <TextView
      android:layout_width="match_parent"
      android:layout_height="wrap_content"
      android:text="Hello World!"
      android:textColor="@color/purple"
      android:textSize="22sp" />

    <TextView
      android:layout_width="match_parent"
      android:layout_height="wrap_content"
      android:text="Hello World!"
      android:textColor="@color/cyan"
      android:textSize="22sp" />
    <TextView
      android:layout_width="match_parent"
      android:layout_height="wrap_content"
      android:text="Hello World!"
      android:textColor="@color/pink"
      android:textSize="22sp" />
    <TextView
      android:layout_width="match_parent"
      android:layout_height="wrap_content"
      android:text="Hello World!"
      android:textColor="@color/orange"
      android:textSize="22sp" />


    <TextView
      android:layout_width="match_parent"
      android:layout_height="wrap_content"
      android:text="Hello World!"
      android:textColor="@color/yellow"
      android:textSize="22sp" />
    <TextView
      android:layout_width="match_parent"
      android:layout_height="wrap_content"
      android:text="Hello World!"
      android:textColor="@color/red"
      android:textSize="22sp" />


    <EditText

      android:layout_width="match_parent"
      android:layout_height="wrap_content"
      android:layout_marginLeft="0dp"
      android:layout_marginTop="16dp"
      android:layout_marginRight="0dp"
      android:background="@drawable/bg_textview"
      android:backgroundTint="@color/white"
      android:fontFamily="@font/concert_one_regular"
      android:hint="Nome do Cliente"
      android:inputType="textAutoComplete"
      android:padding="16dp"
      android:textColor="@color/background"
      android:textColorHint="@color/current_line"
      android:textSize="24sp" />

    <LinearLayout
      android:layout_width="match_parent"
      android:layout_height="wrap_content"
      android:orientation="vertical"
      android:padding="8dp">

      <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="0dp"
        android:ellipsize="end"
        android:fontFamily="@font/concert_one_regular"
        android:lines="1"
        android:text="Forma de pagamento"
        android:textColor="@color/white"
        android:textSize="22sp" />


      <Spinner
        android:id="@+id/spn_forma_pagamento"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="4dp"
        android:entries="@array/lista_tipo_registro"
        android:textColor="@color/white"
        android:textSize="14sp" />


    </LinearLayout>

    <Button
      android:layout_width="match_parent"
      android:layout_height="48dp"
      android:layout_marginTop="16dp"
      android:textSize="15sp"
      android:textStyle="bold"
      android:background="@drawable/bg_button"
      android:backgroundTint="@color/green"
      android:textColor="@color/background"
      android:text="Confirmar"/>

    <Button
      android:layout_width="match_parent"
      android:layout_height="48dp"
      android:layout_marginTop="16dp"
      android:textSize="15sp"
      android:textStyle="bold"
      android:background="@drawable/bg_button"
      android:backgroundTint="@color/red"
      android:textColor="@color/white"
      android:text="Cancelar"/>

  </LinearLayout>


</androidx.constraintlayout.widget.ConstraintLayout>