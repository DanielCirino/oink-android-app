<?xml version="1.0" encoding="utf-8"?>
<androidx.coordinatorlayout.widget.CoordinatorLayout xmlns:android="http://schemas.android.com/apk/res/android"
  xmlns:app="http://schemas.android.com/apk/res-auto"
  android:layout_width="match_parent"
  android:layout_height="wrap_content"
  android:layout_marginTop="4dp"
  >

  <androidx.cardview.widget.CardView
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginLeft="4dp"
    android:layout_marginRight="4dp"
    app:cardCornerRadius="8dp">

    <androidx.constraintlayout.widget.ConstraintLayout
      android:layout_width="match_parent"
      android:layout_height="wrap_content"
      android:padding="8dp"
      android:background="@color/current_line">


      <ImageView
        android:id="@+id/iv_icone_tipo_registro"
        android:layout_width="24dp"
        android:layout_height="24dp"
        android:layout_margin="2dp"
        android:scaleType="centerInside"
        android:src="@drawable/ic_caret_para_cima"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintBottom_toBottomOf="parent"
        app:tint="@color/green" />

      <LinearLayout
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:layout_marginLeft="4dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toEndOf="@id/iv_icone_tipo_registro"
        app:layout_constraintTop_toTopOf="parent">

        <TextView
          android:id="@+id/tv_nome_categoria"
          android:layout_width="match_parent"
          android:layout_height="wrap_content"
          android:layout_marginLeft="8dp"
          android:fontFamily="@font/concert_one_regular"
          android:text="Nome da categoria grande de mais"
          android:textColor="@color/white"
          android:textSize="22sp"
          android:textStyle="bold"/>

        <TextView
          android:id="@+id/tv_nome_grupo_categoria"
          android:layout_width="match_parent"
          android:layout_height="wrap_content"
          android:layout_marginTop="1dp"
          android:layout_marginLeft="8dp"
          android:layout_marginRight="2dp"
          android:text="Grupo categoria"
          android:textColor="@color/corNuvem"
          android:textSize="18sp"

          />


      </LinearLayout>
    </androidx.constraintlayout.widget.ConstraintLayout>

  </androidx.cardview.widget.CardView>


</androidx.coordinatorlayout.widget.CoordinatorLayout>