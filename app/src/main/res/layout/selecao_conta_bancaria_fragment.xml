<?xml version="1.0" encoding="utf-8"?>
<androidx.coordinatorlayout.widget.CoordinatorLayout xmlns:android="http://schemas.android.com/apk/res/android"
  xmlns:app="http://schemas.android.com/apk/res-auto"
  xmlns:tools="http://schemas.android.com/tools"
  android:layout_width="match_parent"
  android:layout_height="match_parent"
  android:background="@color/background">

  <LinearLayout
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:padding="8dp"
    tools:ignore="MissingConstraints">

    <androidx.constraintlayout.widget.ConstraintLayout
      android:layout_width="match_parent"
      android:layout_height="wrap_content"
      android:layout_marginLeft="4dp">


      <ImageView
        android:id="@+id/iv_fechar_selecao_tipo_conta"
        android:layout_width="24dp"
        android:layout_height="24dp"
        android:src="@drawable/ic_fechar"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:tint="@color/white" />

      <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="16dp"
        android:fontFamily="@font/concert_one_regular"
        android:text="Contas"
        android:textAlignment="textStart"
        android:textColor="@color/white"
        android:textSize="32sp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toEndOf="@id/iv_fechar_selecao_tipo_conta"
        app:layout_constraintTop_toTopOf="parent" />


    </androidx.constraintlayout.widget.ConstraintLayout>

    <TextView

      android:layout_width="match_parent"
      android:layout_height="wrap_content"
      android:layout_marginLeft="4dp"
      android:layout_marginTop="8dp"
      android:fontFamily="@font/work_sans_regular"
      android:gravity="start"
      android:text="Selecione uma conta onde serão feitos os lançamentos"
      android:textAlignment="textStart"
      android:textColor="@color/comment"
      android:textSize="20sp" />

    <EditText

      android:layout_width="match_parent"
      android:layout_height="wrap_content"
      android:layout_marginLeft="0dp"
      android:layout_marginTop="16dp"
      android:layout_marginRight="0dp"
      android:background="@drawable/bg_textview"
      android:backgroundTint="@color/current_line"
      android:fontFamily="@font/concert_one_regular"
      android:hint="Pesquisar conta"
      android:inputType="textAutoComplete"
      android:padding="16dp"
      android:textColor="@color/white"
      android:textColorHint="@color/corCinzaClaro"
      android:textSize="24sp" />



    <androidx.recyclerview.widget.RecyclerView
      android:id="@+id/rv_lista_contas_bancarias"
      android:layout_width="match_parent"
      android:layout_height="match_parent"
      android:layout_marginTop="16dp" />


  </LinearLayout>


</androidx.coordinatorlayout.widget.CoordinatorLayout>